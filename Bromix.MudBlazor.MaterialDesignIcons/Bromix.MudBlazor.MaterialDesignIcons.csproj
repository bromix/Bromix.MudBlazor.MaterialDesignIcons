<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <GeneratePackageOnBuild Condition="'$(Configuration)'=='Release'">true</GeneratePackageOnBuild>
    </PropertyGroup>

    <PropertyGroup>
        <Title>Bromix.MudBlazor.MaterialDesignIcons</Title>
        <Description>Material Design Icons for MudBlazor</Description>
        <Copyright>Copyright bromix</Copyright>
        <Authors>bromix</Authors>
        <PackageProjectUrl>https://github.com/bromix/Bromix.MudBlazor.MaterialDesignIcons</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>Blazor;MudBlazor;Material;Material Design;Material Design Icons</PackageTags>
        <PackageIcon>Logo.png</PackageIcon>
        <RepositoryUrl>https://github.com/bromix/Bromix.MudBlazor.MaterialDesignIcons</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../Logo.png" Pack="true" PackagePath="/"/>
        <None Include="../README.md" Pack="true" PackagePath="/"/>
        <None Include="../LICENSE" Pack="true" PackagePath="/"/>
    </ItemGroup>
</Project>
